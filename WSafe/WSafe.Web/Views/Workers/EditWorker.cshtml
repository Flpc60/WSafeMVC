@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditWorker", "Workers", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Consultar ficha trabajador</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        <div class="col-md-10 col-sm-10" style="font-size:18px">
                            <label>Número documento:</label>
                            <input type="search" name="document" placeholder="Ingrese documento" />
                            <input type="submit" value="Buscar" class="btn btn-success" />
                        </div>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </div>
}
