@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center">ACTUALIZAR PERFÍL SOCIODEMOGRÁFICO: @Session["organization"].ToString().Trim()</h4>
<hr />

@using (Html.BeginForm("EditWorker", "Workers", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-md-10 col-sm-12  mb-3">
                    <div class="form-outline">
                        <input type="search" name="document" class="form-control" maxlength="20" placeholder="Ingrese número documento" />
                        <input type="submit" value="Buscar" class="btn btn-success">
                    </div>
                </div>
                <div class="col-md-2 col-sm-12">
                    <a href="@Url.Action("Create", "Workers")" class="btn btn-info btn-block">
                        <span class="glyphicon glyphicon-plus"></span> Nuevo trabajador
                    </a>
                </div>
            </div>
        </div>
    </div>
}
