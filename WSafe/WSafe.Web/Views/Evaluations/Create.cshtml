@{
    var title = "GESTIONAR EVALUACIÓN DE ESTÁNDARES";
}

<style>
    .tabIdCausas, .tabGesPlanAcc, .tabGesSeguiPlanAcc, .tabPlanAcc, .tabSeguimAcc, .tabSeguimPlanAcc, .tabAddPlanAcc, .tabAddSeguimAcc,
    .tabGesCalifications, .tabAddCalifications

    {
        display: none;
    }

</style>

<hr />
<hr />
<h4>@title</h4>
<div class="pull-left">
    <div class="btn-group">
        <button type="button" class="btn btn-info" id="evaluation" onclick="AddEvaluation()"> 1. REALIZAR AUTOEVALUACIÓN</button>
        <button type="button" class="btn btn-info" id="showEvaluation" title="doble click para cerrar la ventana"> 2. VISUALIZAR</button>
        <button type="button" class="btn btn-info" id="activitys" title="doble click para cerrar la ventana"> 2. PLAN DE ACTIVIDADES</button>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="tabGesCalifications">
        @Html.Partial("_ShowCalifications")
        <hr />
        <div class="row" style="text-align:center">
            <div class="col-md-2">
                <p id="txtTotales"></p>
            </div>
            <div class="col-md-2">
                <p id="txtCumple"></p>
            </div>
            <div class="col-md-2">
                <p id="txtNoCumple"></p>
            </div>
            <div class="col-md-2">
                <p id="txtNoAplica"></p>
            </div>
            <div class="col-md-2">
                <p id="txtValoracion"></p>
            </div>
        </div>
    </div>

    <div class="tabAddCalifications">
        <input type="hidden" id="txtCalificationID" name="txtCalificationID" />
        <input type="hidden" id="txtEvaluationID" name="txtEvaluationID" />
        <input type="hidden" id="txtValor" name="txtValor" />
        @Html.Partial("_EditCalification")
        <div class="row">
            <div class="col-md-8">
                <hr />
                <button type="button" id="btnUpdCalification" class="btn btn-primary" onclick="UpdateCalification()">Actualizar</button>
                <button type="button" id="btnCanCalification" class="btn btn-primary" onclick="CancelCalification()">
                    <span class="glyphicon glyphicon-chevron-left"></span> Cerrar
                </button>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>

</div>
}

@section Scripts
{
    <script type="text/javascript">

        $.ajaxSetup({

            error: function (jqXHR, textStatus, errorThrown) {

                if (jqXHR.status === 0) {

                    alert('Not connect: Verify Network.');

                } else if (jqXHR.status == 404) {

                    alert('Requested page not found [404]');

                } else if (jqXHR.status == 500) {

                    alert('Internal Server Error [500].');

                } else if (textStatus === 'parsererror') {

                    alert('Requested JSON parse failed.');

                } else if (textStatus === 'timeout') {

                    alert('Time out error.');

                } else if (textStatus === 'abort') {

                    alert('Ajax request aborted.');

                } else {

                    alert('Uncaught Error: ' + jqXHR.responseText);

                }
            }
        });

        $(document).ready(function () {
            ClearTextBox();
            GestorActions();
        });

        $('#idFechaIni').change(function () {
            var fecha = $("#idFechaIni").val();
            validarFechaIni(fecha);
        });

        $('#idFechaFin').change(function () {
            var fechaIni = $("#idFechaIni").val();
            var fechaFin = $("#idFechaFin").val();
            validarFechaFin(fechaIni, fechaFin);
        });

        $('#FechaSolicitud').change(function () {
            var fecha = $("#FechaSolicitud").val();
            validarFechaIni(fecha);
        });

        $('#FechaCierre').change(function () {
            var fechaIni = $("#idFechaIni").val();
            var fechaFin = $("#FechaCierre").val();
            validarFechaFin(fechaIni, fechaFin);
        });

    </script>
}