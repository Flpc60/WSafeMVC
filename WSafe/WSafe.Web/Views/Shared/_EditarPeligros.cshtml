@model WSafe.Web.Models.RiesgoViewModel

<style>
    .tabAddZones, .tabAddProcess, .tabAddActivitys, .tabAddTasks {
        display: none;
        margin-left: 40%;
        text-align: center;
        font-size: 16px;
        padding: 0;
    }

</style>

<div class="container" style="background-color: azure">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <input type="hidden" id="txtRiesgoID" name="txtRiesgoID" />
                @Html.LabelFor(model => model.ZonaID, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8 col-sm-10">
                    @Html.DropDownListFor(model => model.ZonaID, Model.Zonas, new { @class = "form-control", @id = "zona" })
                    @Html.ValidationMessageFor(model => model.ZonaID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.ProcesoID, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8 col-sm-10">
                    @Html.DropDownListFor(model => model.ProcesoID, Model.Procesos, new { @class = "form-control", @id = "proceso" })
                    @Html.ValidationMessageFor(model => model.ProcesoID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="tabAddZones">
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-12 col-sm-12">
                        <div class="input-group">
                            <input type="text" id="txtZone" name="txtZone" placeholder="Ingrese nombre de la zona ..." class="form-control" size="200" />
                            <button type="button" class="btn btn-secondary" onclick="AddZone()">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tabAddProcess">
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-12 col-sm-12">
                        <div class="input-group">
                            <input type="text" id="txtProcess" name="txtProcess" placeholder="Ingrese nombre del proceso ..." class="form-control" size="200" />
                            <button type="button" class="btn btn-secondary" onclick="AddProcess()">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.ActividadID, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8 col-sm-10">
                    @Html.DropDownListFor(model => model.ActividadID, Model.Actividades, new { @class = "form-control", @id = "activity" })
                    @Html.ValidationMessageFor(model => model.ActividadID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.TareaID, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8 col-sm-10">
                    @Html.DropDownListFor(model => model.TareaID, Model.Tareas, new { @class = "form-control", @id = "tarea" })
                    @Html.ValidationMessageFor(model => model.TareaID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="tabAddActivitys">
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-12 col-sm-12">
                        <div class="input-group">
                            <input type="text" id="txtActivity" name="txtActivity" placeholder="Ingrese nombre de la actividad ..." class="form-control" size="200" />
                            <button type="button" class="btn btn-secondary" onclick="AddActivity()">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tabAddTasks">
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-12 col-sm-12">
                        <div class="input-group">
                            <input type="text" id="txtDescripcion" name="txtDescripcion" placeholder="Ingrese nombre de la tarea ..." class="form-control" size="200" />
                            <button type="button" class="btn btn-secondary" onclick="AddTask()">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Rutinaria, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-3 col-sm-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Rutinaria, new { htmlAttributes = new { @id = "txtRutinaria" } })
                        @Html.ValidationMessageFor(model => model.Rutinaria, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.CategoriaPeligroID, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8 col-sm-10">
                    @Html.DropDownListFor(model => model.CategoriaPeligroID, Model.CategoriasPeligros, new { @class = "form-control", @id = "categoria" })
                    @Html.ValidationMessageFor(model => model.CategoriaPeligroID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.PeligroID, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9 col-sm-10">
                    @Html.DropDownListFor(model => model.PeligroID, Model.Peligros, new { @class = "form-control", @id = "peligro" })
                    @Html.ValidationMessageFor(model => model.PeligroID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.EfectosPosibles, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8 col-sm-10">
                    @Html.EnumDropDownListFor(model => model.EfectosPosibles, htmlAttributes: new { @class = "form-control", @id = "txtEfectos" })
                    @Html.ValidationMessageFor(model => model.EfectosPosibles, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.DangerCategory, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8 col-sm-10">
                    @Html.EnumDropDownListFor(model => model.DangerCategory, htmlAttributes: new { @class = "form-control", @id = "txtDanger" })
                    @Html.ValidationMessageFor(model => model.DangerCategory, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>
