@model WSafe.Web.Models.AccionViewModel

@{
    var categorias = ViewBag.Categorias;
}

<div class="container" style="background-color:floralwhite">
    <div id="_EditarPlanAcc">
        <div class="row">
            <hr />
            <div class="col-md-4 col-sm-6">
                <label for="idFechaIni">FECHA INICIAL:</label>
                <input type="date" class="form-control" id="idFechaIni" value="@Model.FechaSolicitud" required autofocus>
            </div>
            <div class="col-md-4 col-sm-6">
                <label for="idFechaFin">FECHA CIERRE:</label>
                <input type="date" class="form-control" id="idFechaFin" value="@Model.FechaCierre" required>
            </div>
            <div class="col-md-4 col-sm-6">
                <label for="causa">CAUSA:</label>
                @Html.DropDownList("Categorias", categorias as IEnumerable<SelectListItem>, new { @class = "form-control", @id = "txtCausa"})
            </div>
        </div>
        <div class="row">
            <hr />
            <div class="col-md-12">
                <label for="accion">ACTIVIDAD:</label>
                <textarea id="accion" style="resize:none;" class="form-control" rows=3 required></textarea>
            </div>
        </div>
        <div class="row">
            <hr />
            <div class="col-md-5 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.TrabajadorID, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8 col-sm-10">
                        @Html.DropDownListFor(model => model.TrabajadorID, Model.Trabajadores, new { @class = "form-control", @id = "idRespons" })
                        @Html.ValidationMessageFor(model => model.TrabajadorID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="prioritaria" class="form-control">PRIORITARIA: </label>
                    <div class="col-md-6 col-sm-10">
                        <div class="checkbox">
                            <input class="form-check-input" type="checkbox" id="idPrioritaria" name="idPrioritaria">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <label for="idCostos" class="form-control" >COSTOS:</label>
                <input type="number" class="form-control" id="idCostos" name="idCostos" onchange="validarCostos()">
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.ActionCategory, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-8 col-sm-10">
                        @Html.EnumDropDownListFor(model => model.ActionCategory, htmlAttributes: new { @class = "form-control", @id = "txtPlanCategory" })
                        @Html.ValidationMessageFor(model => model.ActionCategory, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <hr />
    </div>
</div>