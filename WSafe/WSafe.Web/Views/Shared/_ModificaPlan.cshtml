@model WSafe.Web.Models.AccionViewModel

<div class="container bg-light p-4 rounded">
    <hr />
    <div class="row">
        <div class="col-md-12 mb-3">
            <label for="accion">Actividad:</label>
            <textarea id="accion" class="form-control form-control-sm" rows="3" style="resize:none; width: 90%;" required></textarea>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="form-group d-flex align-items-center">
                <label for="idFechaIni" style="margin-right: 10px;">Fecha inicial:</label>
                <input type="date" class="form-control form-control-sm" id="idFechaIni" value="@Model.FechaSolicitud" required autofocus style="width: 30%;">
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="form-group d-flex align-items-center">
                <label for="idFechaFin" style="margin-right: 10px;">Fecha cierre:</label>
                <input type="date" class="form-control form-control-sm" id="idFechaFin" value="@Model.FechaCierre" required style="width: 30%;">
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-5 mb-3">
            <div class="form-group d-flex align-items-center">
                @Html.LabelFor(model => model.TrabajadorID, htmlAttributes: new { @style = "margin-right: 20px;" })
                @Html.DropDownListFor(model => model.TrabajadorID, Model.Trabajadores, new { @class = "form-control form-control-sm", @id = "idRespons", style = "width: 70%;" })
                @Html.ValidationMessageFor(model => model.TrabajadorID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="form-group d-flex align-items-center">
                <label for="prioritaria" style="margin-right: 10px;">Prioritaria:</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="idPrioritaria" name="idPrioritaria">
                    <label class="form-check-label" for="idPrioritaria">Sí</label>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="form-group d-flex align-items-center">
                <label for="idCostos" style="margin-right: 10px;">Costos:</label>
                <input type="number" class="form-control form-control-sm" id="idCostos" name="idCostos" onchange="validarCostos()" style="width: 50%;">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="form-group d-flex align-items-center">
                @Html.LabelFor(model => model.ActionCategory, htmlAttributes: new { @style = "margin-right: 20px;" })
                @Html.EnumDropDownListFor(model => model.ActionCategory, htmlAttributes: new { @class = "form-control form-control-sm", @id = "txtPlanCategory", style = "width: 40%;" })
                @Html.ValidationMessageFor(model => model.ActionCategory, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <hr />
</div>

