<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WSafe</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap-table.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-table/bootstrap-table.min.js"></script>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryunobtrusive")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/GestorRiesgosSST.js" type="text/javascript"></script>

</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class = "navbar-brand"><i class="fa-duotone fa-user-helmet-safety"></i>WSafe</a>
            </div>
            <div class="navbar-collapse collapse navbar-menu">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Entidad", "Index", "Organizations")</li>
                    <li>@Html.ActionLink("SG-SST", "Index", "Movimientos")</li>
                    <li>@Html.ActionLink("Evaluación Estándares", "Index", "Evaluations")</li>
                    <li>@Html.ActionLink("Riesgos", "Index", "Riesgos")</li>
                    <li>@Html.ActionLink("Incidentes", "Index", "Incidentes")</li>
                    <li>@Html.ActionLink("Acciones", "Index", "Acciones")</li>
                    <li>@Html.ActionLink("Indicadores", "Index", "Indicadores")</li>
                    <li>@Html.ActionLink("Usuarios", "Index", "Accounts")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["userName"] != null)
                    {
                        <li><a style="color:white;font-family:Arial"><b>Hola : @Session["userName"].ToString().Trim()</b></a></li>
                    }
                    <li>@Html.ActionLink("Cerrar sesión", "Logout", "Accounts", new { @class = "glyphicon glyphicon-log-out" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row align-items-start">
                <div class="col-md-2">
                    @Html.ActionLink("Cerrar Módulo", "Index", "Home",
                    new { @class = "btn btn-success btn-lg" },
                    new { @class = "glyphicon glyphicon-chevron-left" })
                </div>
                <div class="col-md-10">
                </div>
            </div>
            <hr />
            <p>&copy; @DateTime.Now.Year - FLPCSoft, WSafe</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>