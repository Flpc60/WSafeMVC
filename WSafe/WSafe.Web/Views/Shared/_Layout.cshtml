<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WSafe</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/Content/bootstrap-table.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!--<link href="~/Content/bootstrap" rel="stylesheet"/>-->

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/Scripts/GestorAudits.js" type="text/javascript"></script> <!-- funciones gráficas y auditorías--->>
    <script src="~/Scripts/GestorRiesgosSST.js" type="text/javascript"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryunobtrusive")
    @Scripts.Render("~/bundles/jqueryval")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#">
                    <img src="/Images/wsafe.jpg" width="50" height="50" alt="WSafe Logo" class="navbar-brand-logo">
                </a>
            </div>
            <!--<div class="navbar-collapse collapse navbar-menu"></div>-->
            <!--<div class="navbar navbar-expand-lg navbar-dark bg-dark"></div>-->
            <div class="navbar navbar-expand-lg navbar-dark bg-dark">
                <ul class="nav navbar-nav" style="font-size:10px; color:blue;">
                    @{
                        var userID = Session["userID"];
                        var userRole = Session["UserRole"];
                        userRole = userRole.ToString().Trim();
                        if (userRole.Equals("ADMIN"))
                        {
                            <li>@Html.ActionLink("ENTIDAD", "Index", "Organizations")</li>
                            <li>@Html.ActionLink("SG-SST", "Index", "Movimientos")</li>
                            <li>@Html.ActionLink("EVALUACIÓN", "Index", "Evaluations")</li>
                            <li>@Html.ActionLink("RIESGOS", "Index", "Riesgos")</li>
                            <li>@Html.ActionLink("INCIDENTES", "Index", "Incidentes")</li>
                            <li>@Html.ActionLink("ACCIONES", "Index", "Acciones")</li>
                            <li>@Html.ActionLink("INDICADORES", "Index", "Indicadores")</li>
                            <li>@Html.ActionLink("USUARIOS", "Index", "Accounts")</li>
                            <li>@Html.ActionLink("TRABAJADORES", "Index", "Workers")</li>
                            <li>@Html.ActionLink("ACTOS_INSEGUROS", "Index", "Unsafeacts")</li>
                            <li>@Html.ActionLink("RECOMENDACIONES", "Index", "Recomendations")</li>
                            <li>@Html.ActionLink("AUDITORIAS", "Index", "Audits")</li>
                        }
                        else
                        {
                            if (userRole.Equals("LIDER RESPONSABLE SST"))
                            {
                                <li>@Html.ActionLink("RIESGOS", "Index", "Riesgos")</li>
                                <li>@Html.ActionLink("INCIDENTES", "Index", "Incidentes")</li>
                                <li>@Html.ActionLink("ACCIONES", "Index", "Acciones")</li>
                                <li>@Html.ActionLink("ACTOS_INSEGUROS", "Index", "Unsafeacts")</li>
                                <li>@Html.ActionLink("RECOMENDACIONES", "Index", "Recomendations")</li>
                                <li>@Html.ActionLink("AUDITORIAS", "Index", "Audits")</li>
                            }
                            else
                            {
                                if (userRole.Equals("ARL"))
                                {
                                    <li>@Html.ActionLink("ENTIDAD", "Index", "Organizations")</li>
                                    <li>@Html.ActionLink("SG-SST", "Index", "Movimientos")</li>
                                    <li>@Html.ActionLink("EVALUACIÓN", "Index", "Evaluations")</li>
                                    <li>@Html.ActionLink("AUDITORIAS", "Index", "Audits")</li>
                                }
                                else
                                {
                                    if (userRole.Equals("TRABAJADOR"))
                                    {
                                        <li>@Html.ActionLink("TRABAJADORES", "GetWorker", "Workers")</li>
                                        <li>@Html.ActionLink("ACTOS_INSEGUROS", "Create", "Unsafeacts")</li>
                                    }
                                    else
                                    {
                                        <li>@Html.ActionLink("ACTOS_INSEGUROS", "Create", "Unsafeacts")</li>
                                    }
                                }
                            }
                        }
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["userName"] != null)
                    {
                        <li><a style="color:white;font-family:Arial"><b>Usuario(a): @Session["userName"].ToString().Trim()</b></a></li>
                    }
                    <li>@Html.ActionLink("Cerrar", "Logout", "Accounts", new { @class = "glyphicon glyphicon-log-out" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row align-items-start">
                <div class="col-md-2">
                    @Html.ActionLink("Cerrar Módulo", "Index", "Home",
                    new { @class = "btn btn-success btn-lg" },
                    new { @class = "glyphicon glyphicon-chevron-left" })
                </div>
                <div class="col-md-10">
                </div>
            </div>
            <hr />
            <p>&copy; @DateTime.Now.Year - FLPCSoft</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/bootstrap-table/bootstrap-table.min.js")
    @Scripts.Render("~/Scripts/GestorAudits.js")
    @Scripts.Render("~/Scripts/GestorRiesgosSST.js")
    @RenderSection("scripts", required: false)
</body>
</html>
