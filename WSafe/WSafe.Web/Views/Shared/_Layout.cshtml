<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WSafe</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/Content/bootstrap-table.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/Scripts/GestorRiesgos.js" type="text/javascript"></script>
    <script src="~/Scripts/AuditsGestor.js" type="text/javascript"></script> <!-- funciones gráficas y auditorías--->>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryunobtrusive")
    @Scripts.Render("~/bundles/jqueryval")

    <style>

        body {
            margin-top: 0;
            padding-top: 0;
        }

        .navbar {
            background-color: silver;
            padding: 0;
        }

        .navbar-brand {
            padding: 0;
        }

        .navbar-brand-logo {
            margin-top: 0; /* Adjusted value for vertical alignment with menu */
            height: 50px;
            margin-right: 10px;
        }

        .navbar-nav {
            font-size: 11px;
            color: blue;
            text-align: left; /* Center the menu items */
            margin: 0; /* Adjusted margin between menu items */
            padding: 0;
            list-style-type: none;
        }

            .navbar-nav .nav-item {
                margin-left: -20px;
                font-size: 11px;
                color: blue;
                padding: 0;
                list-style-type: none;
            }

            .navbar-nav .nav-link {
                padding: 0;
                margin: 0;
                color: blue;
            }

        .navbar-text {
            font-size: 10px;
            color: white;
        }

        .navbar-nav li {
            display: inline-block;
            font-size: 12px;
            text-align: right;
            color: white;
            margin-left: 10px;
        }

            .navbar-nav li:hover {
                background-color: silver; /* Change this color to your desired hover color */
            }

        .navbar-right {
            margin-right: 0; /* Adjusted margin for right-aligned items */
        }

        .navbar-collapse {
            text-align: left; /* Center the menu items */
        }

        .navbar-toggler {
            margin-right: 0; /* Adjusted margin for the toggler button */
        }

        .body-content {
            margin-top: 1px; /* Adjusted margin below the fixed navbar */
            padding-top: 1px; /* Added padding to reduce space below the menu */
        }

        footer {
            margin-top: 5px; /* Adjusted margin above the footer */
        }
    </style>

</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="/Images/wsafe.jpg" width="50" height="50" alt="WSafe Logo" class="navbar-brand-logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    @{
                        var userID = Session["userID"];
                        var userRole = Session["UserRole"];
                        userRole = userRole.ToString().Trim();
                        if (userRole.Equals("ADMIN"))
                        {
                            <li class="nav-item">@Html.ActionLink("ENTIDAD", "Index", "Organizations")</li>
                            <li class="nav-item">@Html.ActionLink("SG-SST", "Index", "Movimientos")</li>
                            <li class="nav-item">@Html.ActionLink("EVALUACIONES", "Index", "Evaluations")</li>
                            <li class="nav-item">@Html.ActionLink("RIESGOS", "Index", "Riesgos")</li>
                            <li class="nav-item">@Html.ActionLink("INCIDENTES", "Index", "Incidentes")</li>
                            <li class="nav-item">@Html.ActionLink("ACCIONES", "Index", "Acciones")</li>
                            <li class="nav-item">@Html.ActionLink("INDICADORES", "Index", "Indicadores")</li>
                            <li class="nav-item">@Html.ActionLink("USUARIOS", "Index", "Accounts")</li>
                            <li class="nav-item">@Html.ActionLink("TRABAJADORES", "Index", "Workers")</li>
                            <li class="nav-item">@Html.ActionLink("ACTO_INSEGUROS", "Index", "Unsafeacts")</li>
                            <li class="nav-item">@Html.ActionLink("RECOMENDACIONES", "Index", "Recomendations")</li>
                            <li class="nav-item">@Html.ActionLink("PLAN_ANUAL", "Index", "AnnualPlans")</li>
                            <li class="nav-item">@Html.ActionLink("OCUPACIONALES", "Index", "Occupationals")</li>
                            <li class="nav-item">@Html.ActionLink("CAPACITACIONES", "Index", "Capacitations")</li>
                            <li class="nav-item">@Html.ActionLink("VULNERABILIDADES", "Index", "Vulnerabilities")</li>
                        }
                        else
                        {
                            if (userRole.Equals("LIDER RESPONSABLE SST"))
                            {
                                <li class="nav-item">@Html.ActionLink("RIESGOS", "Index", "Riesgos")</li>
                                <li class="nav-item">@Html.ActionLink("INCIDENTES", "Index", "Incidentes")</li>
                                <li class="nav-item">@Html.ActionLink("ACCIONES", "Index", "Acciones")</li>
                                <li class="nav-item">@Html.ActionLink("ACTOS_INSEGUROS", "Index", "Unsafeacts")</li>
                                <li class="nav-item">@Html.ActionLink("RECOMENDACIONES", "Index", "Recomendations")</li>
                                <li class="nav-item">@Html.ActionLink("PLAN_ANUAL", "Index", "AnnualPlans")</li>
                                <li class="nav-item">@Html.ActionLink("CAPACITACIONES", "Index", "Capacitations")</li>
                                <li class="nav-item">@Html.ActionLink("VULNERABILIDADES", "Index", "Vulnerabilities")</li>
                            }
                            else
                            {
                                if (userRole.Equals("ARL"))
                                {
                                    <li class="nav-item">@Html.ActionLink("ENTIDAD", "Index", "Organizations")</li>
                                    <li class="nav-item">@Html.ActionLink("SG-SST", "Index", "Movimientos")</li>
                                    <li>@Html.ActionLink("EVALUACIONES", "Index", "Evaluations")</li>
                                    <li class="nav-item">@Html.ActionLink("PLAN_ANUAL", "Index", "AnnualPlans")</li>
                                    <li class="nav-item">@Html.ActionLink("VULNERABILIDADES", "Index", "Vulnerabilities")</li>
                                }
                                else
                                {
                                    if (userRole.Equals("TRABAJADOR"))
                                    {
                                        <li class="nav-item">@Html.ActionLink("TRABAJADORES", "GetWorker", "Workers")</li>
                                        <li class="nav-item">@Html.ActionLink("RIESGOS", "Create", "Riesgos")</li>
                                        <li class="nav-item">@Html.ActionLink("ACTOS_INSEGUROS", "Create", "Unsafeacts")</li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">@Html.ActionLink("ACTOS_INSEGUROS", "Create", "Unsafeacts")</li>
                                    }
                                }
                            }
                        }
                    }
                </ul>
                <div style="color: white; text-align: right;">
                    @if (Session["userName"] != null)
                    {
                        <a style="display: inline-block; margin-right: 10px;"><b>Hola: @Session["userName"].ToString().Trim()</b></a>
                        <a href="#" style="display: inline-block;" class="glyphicon glyphicon-chevron-left" onclick="logout()">Cerrar sesión</a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row align-items-start">
                <div class="col-md-2">
                    @Html.ActionLink("Cerrar Módulo", "Index", "Home",
                    new { @class = "btn btn-success btn-lg" },
                    new { @class = "glyphicon glyphicon-chevron-left" })
                </div>
                <div class="col-md-10">
                </div>
            </div>
            <hr />
            <p>&copy; @DateTime.Now.Year - FLPCSoft</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/bootstrap-table/bootstrap-table.min.js")
    @Scripts.Render("~/Scripts/GestorRiesgos.js")
    @Scripts.Render("~/Scripts/AuditsGestor.js")
    @Scripts.Render("~/Scripts/CapacitationsGestor.js")
    @RenderSection("scripts", required: false)

</body>
</html>
