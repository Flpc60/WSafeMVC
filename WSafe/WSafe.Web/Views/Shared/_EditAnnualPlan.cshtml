@model WSafe.Web.Models.CreatePlanActivityVM

<div class="container" style="background-color:azure; padding:20px;">
    <div class="row">

        <hr class="mt-4">
        <h4 style="text-align:center">REGISTRAR PLAN DE MEJORAMIENTO</h4>
        <hr class="mt-4">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.NormaID, htmlAttributes: new { @class = "control-label col-md-2" })
