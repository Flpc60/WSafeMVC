                    <div class="checkbox">
                        @Html.EditorFor(model => model.Financieros)
                        @Html.ValidationMessageFor(model => model.Financieros, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
