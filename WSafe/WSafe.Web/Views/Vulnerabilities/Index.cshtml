@model IEnumerable<WSafe.Domain.Models.VulnerabilityVM>

<style>

    .CommonActivitys, .ClassDangers, .EfectosPosibles {
        display: none
    }

    .centerText {
        text-align: center
    }

</style>

<h4 class="centerText">GESTIÓN DE VULNERABILIDADES: @Session["organization"].ToString().Trim()</h4>
@Html.Partial("_PageHead")
<div class="container">
    <div class="row justify-content-between">
        <div class="col-md-8">
            @Html.ActionLink("Nueva amenaza", "Create", null, new { @class = "btn btn-info btn-lg active glyphicon glyphicon-plus" })
            @Html.ActionLink("Generar matriz de vulnerabilidades", "PrintVulnerabilitiesToPdf", null, new { @class = "btn btn-info btn-lg glyphicon glyphicon-download-alt" })
        </div>
        <div class="col-md-4">
            <div class="text-right">
                <div class="btn-group">
                    <div style="background-color: red;color:black;">RIESGO INMINENTE</div>
                    <div style="background-color: orange; color: black;">RIESGO PROBABLE</div>
                    <div style="background-color: green; color: black;">RIESGO POSIBLE</div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="table-responsive" style="background-color: azure; width:100%; margin-right:0px">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryAmenaza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amenaza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EvaluationConcept)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Response)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observation)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryAmenaza)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amenaza)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EvaluationConcept)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Response)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observation)
                </td>
                <td style="margin:initial; background-color:deepskyblue; text-align:left;">
                    @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "glyphicon glyphicon-edit", @title = "Actualizar" })
                </td>
                <td style="margin:initial; background-color:deepskyblue; text-align:left">
                    <a href="#" onclick="DeleteVulnerability('@item.ID')" class="glyphicon glyphicon-trash" title="Descartar"></a>
                </td>
            </tr>
        }

    </table>

</div>
