@model WSafe.Web.Models.IndicadorViewModel

@{
    ViewBag.Title = "Index";
    var datos = Model.Datos;
    var imagePath = Model.Imagen;
}

<h2>Indicadores de resultados</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.FechaInicial, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.FechaInicial, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FechaInicial, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FechaFinal, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.FechaFinal, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FechaFinal, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Indicadores, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.IndicadorID, Model.Indicadores, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IndicadorID, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.Definicion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.Definicion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Definicion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Formula, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.Formula, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Formula, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Interpretacion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.Interpretacion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Interpretacion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Periodicidad, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.Periodicidad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Periodicidad, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>
}
<hr />

<div style="display:inline-flex">

    <div>
        <table class="table" data-width="100">
            <thead class="thead-dark">
                <tr>
                    <th data-width="100">
                        Periodo
                    </th>
                    <th data-width="100">
                        Numerador
                    </th>
                    <th data-width="100">
                        Denominador
                    </th>
                    <th data-width="100">
                        Resultado
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model.Datos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MesAnn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numerador)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Denominador)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Resultado)
                    </td>
                </tr>
            }
        </table>
    </div>

    <div>
        <img src="~/Images/chart04.jpg" alt="Sample Image" width="500" />
    </div>

</div>
<hr />

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Nueva consulta", "Create", new { @class = "glyphicon glyphicon-plus" },
        new { @class = "btn btn-info btn-lg active" })
    </div>
</div>